{
    "tasks": {
        "dev:old": "deno run --watch main.ts",
        "dev": "deno run -A --node-modules-dir=auto npm:vite",
        "build": "deno run -A --node-modules-dir=auto npm:vite build",
        "server:start": "deno run -A --node-modules-dir --watch ./server/main.ts",
        "serve": "deno task build && deno task server:start"
    },
    "fmt": {
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": true,
        "include": [
            "client/",
            "server/"
        ],
        "exclude": [
            "client/.vite/"
        ]
    },
    "imports": {
        "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
        "@langchain/community": "npm:@langchain/community@^0.3.15",
        "@langchain/core": "npm:@langchain/core@^0.3.18",
        "@langchain/ollama": "npm:@langchain/ollama@^0.1.2",
        "@langchain/pinecone": "npm:@langchain/pinecone@^0.1.3",
        "@oak/oak": "jsr:@oak/oak@^17.1.3",
        "@std/datetime": "jsr:@std/datetime@^0.225.2",
        "@std/path": "jsr:@std/path@^1.0.8",
        "@types/react": "npm:@types/react@^18.3.12",
        "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
        "langchain": "npm:langchain@^0.3.6",
        "react": "npm:react@^18.3.1",
        "react-dom": "npm:react-dom@^18.3.1",
        "react-router-dom": "npm:react-router-dom@^6.28.0",
        "vite": "npm:vite@^5.4.11"
    },
    "compilerOptions": {
        "types": [
            "react",
            "react-dom",
            "@types/react"
        ],
        "lib": [
            "dom",
            "dom.iterable",
            "deno.ns"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    }
}
